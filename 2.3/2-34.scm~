(define (accumulate op init sequence)
  (if (null? sequence)
      init
      (op (car sequence)
	  (accumulate op init (cdr sequence)))))

(define (horner-eval x coeff-sequence)
  (accumulate (lambda (this-coeff higher-terms)
		(+ (* this-coeff x) higher-terms))
	      0
	      coeff-sequence))

(define (normal-eval x coeff-sequence)
  (if (null? coeff-sequence)
      0
      (+ (* (car coeff-sequence) (expt x (- (length coeff-sequence) 1)))
	 (normal-eval x (cdr coeff-sequence)))))
